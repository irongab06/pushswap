	@echo "__________ ____ ___  _________ ___ ___     ___________      __  _____ __________  "
	@echo "\______   \    |   \/   _____//   |   \   /   _____/  \    /  \/ _   \\______    \ "
	@echo " |     ___/    |   /\_____  \/    ~    \  \_____  \\    \/\/   / /_\   \|    ___/ "
	@echo " |    |   |    |  / /        \    Y    /  /        \\         /   |     \   |     "
	@echo " |____|   |______/ /_______  /\___|_  /  /_______  / \__/\  /\____|__  /____|     "
	@echo "                           \/       \/           \/       \/         \/           "	
	@echo "${NC}"

.c.o:
	$(eval COMPILED_FILES=$(shell echo $$(($(COMPILED_FILES)+1))))
	@$(CC) $(CFLAGS) -c $< -o $@
	@PROGRESS=$$(($(COMPILED_FILES) * 100 / $(TOTAL_FILES))); \
	BAR=$$(( $(COMPILED_FILES) * 50 / $(TOTAL_FILES) )); \
	BAR_GRAPH=""; \
	i=0; \
	while [ $$i -lt $$BAR ]; do \
		BAR_GRAPH=$${BAR_GRAPH}/; \
		i=$$((i + 1)); \
	done; \
	i=$$((50 - $$BAR)); \
	while [ $$i -gt 0 ]; do \
		BAR_GRAPH="$${BAR_GRAPH} "; \
		i=$$((i - 1)); \
	done; \
	if [ $$PROGRESS -eq 100 ]; then \
		tput cuu1; tput el; echo "Compiling: [  ${GREEN}$$BAR_GRAPH${NC}] $$PROGRESS%"; \
	else \
		tput cuu1; tput el; echo  "Compiling: [  ${RED}$$BAR_GRAPH${NC}] $$PROGRESS%"; \
	fi

$(LIBFT):
	@make -C $(LIBFT_DIR) --silent

clean:
	@rm -f $(OBJ)
	@make -C $(LIBFT_DIR) clean --silent

fclean: clean
	@rm -f $(NAME)
	@make -C $(LIBFT_DIR) fclean --silent

re: fclean all

.PHONY: all clean fclean re bonus
